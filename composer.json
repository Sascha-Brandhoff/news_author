    "license":"LGPLv3",
    "authors":[
	{
	    "name":"Sascha Brandhoff",
	    "email":"sascha.brandhoff@gmail.com",
	    "homepage":"https://www.paypal.me/pixelSpreadde",
	    "role":"Developer"
	}
    ],
    "support":{
	"email":"sascha.brandhoff@gmail.com",
	"issues":"https://github.com/Sascha-Brandhoff/news_author/issues",
	"source":"https://github.com/Sascha-Brandhoff/news_author"
    },
    "require":{
	"php":">=5.3",
	"contao/core": ">=3.4,<3.6"
    },
    "replace":{
	"sascha-brandhoff/news_author":"self.version"
    },
    "extra":{
	"contao":{
	    "sources":{
